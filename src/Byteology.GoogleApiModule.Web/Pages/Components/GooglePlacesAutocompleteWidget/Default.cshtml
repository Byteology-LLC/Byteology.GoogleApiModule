@using Byteology.GoogleApiModule.Web.Pages.Components.GooglePlacesAutocompleteWidget
@model GooglePlacesAutoCompleteWidgetOptions
@{

}
<div class="google-places-autocomplete-widget d-flex align-items-center @Model.ParentCss">

    @if(!string.IsNullOrEmpty(Model.Label))
    {
        <label for="google-places-autocomplete-select" class="col-sm-2 col-form-label">@Model.Label</label>
        <div class="col-sm-10">
            <select id="google-places-autocomplete-select" name="@Model.AddressInputName" class="google-places-auto-complete form-control @Model.CssClass"></select>
        </div>
    }
    else
    {
        <select id="google-places-autocomplete-select" name="@Model.AddressInputName" class="google-places-auto-complete form-control col-sm-12 @Model.CssClass"></select>
    }
   
   
</div>
<input type="hidden" id="google-places-autocomplete-selection-placeid" name="@Model.PlaceIdInputName" />

